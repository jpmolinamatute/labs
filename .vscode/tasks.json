{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Angular",
            "type": "shell",
            "command": "ng serve",
            "options": {
                "cwd": "${workspaceRoot}/client/angular"
            },
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Start Server",
            "type": "npm",
            "script": "start",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$eslint-compact",
                "$eslint-stylish"
            ]
        }
    ]
}
